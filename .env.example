# ============================================================
# INFERNIS â€” Environment Configuration
# Copy to .env and fill in your values
# ============================================================

# === Core Application ===
INFERNIS_DEBUG=false
INFERNIS_DATABASE_URL=postgresql://infernis:infernis_dev@localhost:5432/infernis
INFERNIS_REDIS_URL=redis://localhost:6379/0
INFERNIS_SENTRY_DSN=

# Grid configuration (1.0 for 1km resolution, 5.0 for 5km)
INFERNIS_GRID_RESOLUTION_KM=1.0
INFERNIS_GRID_PARQUET_PATH=data/processed/grid_1km.parquet

# Model paths (download pre-trained or train your own)
INFERNIS_MODEL_1KM_PATH=models/fire_core_1km_v1.json
INFERNIS_HEATMAP_MODEL_PATH=models/heatmap_v1.pt

# Forecast pipeline (multi-day predictions)
INFERNIS_FORECAST_ENABLED=false
INFERNIS_FORECAST_MAX_DAYS=10

# Domain routing
INFERNIS_LANDING_DOMAIN=infernis.ca
INFERNIS_APP_DOMAIN=app.infernis.ca
INFERNIS_API_DOMAIN=api.infernis.ca

# === Copernicus Climate Data Store (ERA5 weather reanalysis) ===
# Register at: https://cds.climate.copernicus.eu/
CDS_API_URL=https://cds.climate.copernicus.eu/api
CDS_API_KEY=

# === Google Earth Engine (satellite imagery: MODIS NDVI, snow cover) ===
# Create service account at: https://console.cloud.google.com/
# Enable Earth Engine API for your project
GEE_PROJECT_ID=
GEE_PRIVATE_KEY_ID=
GEE_PRIVATE_KEY=
GEE_CLIENT_EMAIL=
GEE_CLIENT_ID=

# === NASA Earthdata (SMAP soil moisture) ===
# Register at: https://urs.earthdata.nasa.gov/
NASA_EARTHDATA_USER=
NASA_EARTHDATA_PASS=
NASA_EARTHDATA_TOKEN=

# === NASA FIRMS (active fire detections) ===
# Get key at: https://firms.modaps.eosdis.nasa.gov/api/
FIRMS_MAP_KEY=

# === Firebase (dashboard authentication) ===
# Create project at: https://console.firebase.google.com/
INFERNIS_FIREBASE_PROJECT_ID=
INFERNIS_FIREBASE_API_KEY=
INFERNIS_FIREBASE_SA_JSON=
